                    <i class="fa-solid fa-magnifying-glass px-3"></i>
                    <div class="d-none" >
                      <%= form_with url: devs_path, method: :get, class: "d-flex" do %>
                        <%= text_field_tag :query,
                          params[:query],
                          class: "form-control",
                          placeholder: "Find a dev"
                        %>
                        <%= submit_tag "Search", class: "btn btn-success" %>
                      <% end %>
                    </div>
                    <%# <% end %>
                </div>
              </li>
          <li class="nav-text" style="padding-left: 30px; padding-right: 10px;">
          <%= current_user.email%>
