<%= render "shared/navbar" %>


<div class="main-container p-5">
  <div class = "d-flex justify-content-center">
    <h1>All our Devs</h1>
  </div>
  <div class="d-flex justify-content-center p-3">
    <% if policy(Dev).new? %>
      <div class="btn btn-gradient " >
        <%= link_to "Add a new dev", new_dev_path, class:"btn-index" %>
      </div>
    <%end%>
  </div>
  <div class = 'big-container d-flex'>
    <div class = 'container row w-50 m-3 p-5'>
      <%@devs.each do |dev|%>
        <div class = 'col-12'>
          <%= link_to dev_path(dev) do %>
            <div class = "card-product-bookings">
              <div class="img-container">
                  <% if dev.photo.attached? %>
                    <%= cl_image_tag(dev.photo.key) %>
                  <% else %>
                    <img src="<%=dev.photo_url%>" alt="avatar">
                  <% end %>
              </div>
              <div class = "card-product-infos d-flex-column">
                <div class='m-2 d-flex justify-content-center'>
                  <%= dev.name %>
                </div>
                <div class='m-2'>
                  <%= dev.skill%>
                </div>
                <div class='m-2'>
                  <%= dev.address%>
                </div>
                <div class='m-2 d-flex justify-content-end'>
                  <%= dev.price.to_i %> $/day
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"
      id='map'>
    </div>
  </div>
</div>
