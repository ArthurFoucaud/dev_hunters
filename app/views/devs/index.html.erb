<%= render "shared/navbar" %>

<div class="container py-5 w-75">
  <div class = "d-flex justify-content-center">
    <h1>All our hunters</h1>
  </div>
  <div class = 'row my-2'>
    <%@devs.each do |dev|%>
      <div class="col-4 mb-4 truc" data-aos="zoom-in">
        <div class="card-box bg-white rounded-lg h-100">
          <%= link_to dev_path(dev) do %>
            <div class="img-container p-3">
              <div class ="d-flex justify-content-center ">
                  <% if dev.photo.attached? %>
                    <%= cl_image_tag(dev.photo.key) %>
                  <% else %>
                    <img src="<%=dev.photo_url%>" alt="avatar">
                  <% end %>
                </div>
              </div>
              <div class="d-flex justify-content-center p-3">
                <%= dev.name %>
              </div>
            <div class="d-flex justify-content-center p-3">
              <%= dev.skill%>
            </div>
             <div class="d-flex justify-content-center p-3">
              <%= dev.address%>
            </div>
             <div class="d-flex justify-content-center p-3">
              <%= dev.price.to_i %> $/day
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

    </div>
    <div class="d-flex justify-content-center p-3">
      <% if policy(Dev).new? %>
        <div class="btn btn-gradient " >
          <%= link_to "Add a new dev", new_dev_path, class:"btn-index" %>
        </div>
      <%end%>
       </div>
  <div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
